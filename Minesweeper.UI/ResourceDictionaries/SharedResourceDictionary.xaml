<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--menu buttons-->
    <Color x:Key="MenuBtColor">LightGray</Color>
    <Color x:Key="MenuBtEasyColor">LightGreen</Color>
    <Color x:Key="MenuBtMediumColor">Orange</Color>
    <Color x:Key="MenuBtHardColor">Red</Color>
    <Color x:Key="MenuBtStartColor">Green</Color>
    <SolidColorBrush  x:Key="MenuBtBrush" Color="{StaticResource MenuBtColor}" />
    <SolidColorBrush  x:Key="MenuBtStartBrush" Color="{StaticResource MenuBtStartColor}" />
    
    <!--fonts-->
    <FontFamily x:Key="DigitalSeven">pack://application:,,,/Resources/Fonts/#Digital-7</FontFamily>

</ResourceDictionary>